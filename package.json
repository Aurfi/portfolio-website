{
  "name": "portfolio-website",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test:unit": "vitest",
    "test:unit:run": "vitest run",
    "test:unit:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:accessibility": "vitest run --reporter=verbose src/**/*.a11y.spec.ts",
    "test:all": "npm run test:unit:run && npm run test:e2e",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "deploy": "npm run build && gh-pages -d dist",
    "deploy:preview": "npm run build && npm run preview",
    "dev:manage": "powershell -ExecutionPolicy Bypass -File ./scripts/dev-server.ps1",
    "dev:start": "powershell -ExecutionPolicy Bypass -File ./scripts/dev-server.ps1 -Action start",
    "dev:stop": "powershell -ExecutionPolicy Bypass -File ./scripts/dev-server.ps1 -Action stop",
    "dev:test": "powershell -ExecutionPolicy Bypass -File ./test-final.ps1",
    "dev:status": "powershell -ExecutionPolicy Bypass -File ./scripts/dev-server.ps1 -Action status",
    "generate:icons": "node scripts/generate-icons.js && node scripts/generate-screenshots.js",
    "integration:final": "node scripts/final-integration.cjs",
    "format:check": "prettier --check .",
    "qa:run": "npm run integration:final",
    "docker:dev": "docker-compose up portfolio-dev",
    "docker:preview": "docker-compose up portfolio-preview",
    "docker:build": "docker-compose build",
    "docker:down": "docker-compose down"
  },
  "dependencies": {
    "@heroicons/vue": "^2.2.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.2",
    "pinia": "^3.0.3",
    "vue": "^3.5.18",
    "vue-i18n": "^9.14.5",
    "vue-router": "^4.5.1",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@eslint/js": "^9.34.0",
    "@playwright/test": "^1.55.0",
    "@tsconfig/node22": "^22.0.2",
    "@types/eslint__js": "^8.42.3",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.18.0",
    "@vitejs/plugin-legacy": "^7.2.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "axe-core": "^4.10.2",
    "eslint": "^9.34.0",
    "jiti": "^2.4.2",
    "jsdom": "^26.1.0",
    "npm-run-all2": "^8.0.4",
    "playwright": "^1.49.1",
    "prettier": "^3.6.2",
    "rollup-plugin-visualizer": "^6.0.3",
    "sass": "^1.91.0",
    "terser": "^5.43.1",
    "typescript": "~5.8.0",
    "typescript-eslint": "^8.41.0",
    "vite": "^7.0.6",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-vue-devtools": "^8.0.0",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.4"
  }
}
